<div id="root">
    <!-- <canvas id="holter"></canvas> -->
    <div id="ecg-plot" class="container-fluid" style="margin-top: 30px; margin-left: 100px;">
        <div class="col">
          <h1>ECG <i class="fas fa-diagnoses"></i></h1>
          <p>Showing qrs complexes through timeline</p>      
          <p>Heart rate and SpO2</p>      
        </div>
          <div class="row">
            <div id="real-time-plot" class="col-sm-6" style="background-color: rgb(244, 238, 245); border-right: 1px solid; border-color: black; height: 320px;">
              <canvas id="grid"></canvas> 
              <canvas id="holter"></canvas> 
            </div>
            <div id="extra-info" class="col-sm-2" style="background-color: rgb(244, 238, 245);; color: black;">   
              <div class="container">
                <p>Heart rate</p>
                  <p class="heart">
                    <i class="fa fa-heart fa-2x fa-beat"></i>
                </p>
                <p style="height: 50 px; border-bottom: 1px solid; border-color: black;"></p>
                <!-- <div id="saturation" class="row-sm-2" style="color: green;">SpO2</div> -->
                <p>SpO2 %</p>
                  <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
                  </div>
                  <div>
                  <p style="margin-top: 16px;">Recording</p>
                  <button id="rec-button"></button>
                </div>
              </div>
            </div>
          </div>
          <div class="row" style="background-color: rgb(244, 238, 245);">
            <div class="col-xs-8 col-sm-2" style="font-size: small; border-bottom: 1px solid; border-left: 1px solid; border-color: red;">25 mm/s</div>
            <div class="col-xs-4 col-sm-2" style="font-size: small; border-bottom: 1px solid; border-color: red;">10 mm/mV</div>
            <div class="col-xs-2 col-sm-2" style="font-size: small; border-bottom: 1px solid; border-right: 1px solid; border-color: red;">... Hz</div>
          </div> 
        </div>
</div>
